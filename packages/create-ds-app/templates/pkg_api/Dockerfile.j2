FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY pyproject.toml ./
COPY src/ ./src/

# Install Python dependencies
RUN pip install --no-cache-dir -e .

# Expose port
EXPOSE {{ api_port }}

# Run the application
CMD ["uvicorn", "{{ pkg_name | replace('-', '_') }}.main:app", "--host", "0.0.0.0", "--port", "{{ api_port }}"]